{
    "name": "C++ Develop",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-vscode.cpptools",
                "cschlosser.doxdocgen",
                "matepek.vscode-catch2-test-adapter"
            ]
        }
    },
    "postStartCommand": "sh .devcontainer/postStartCommand.sh"
}